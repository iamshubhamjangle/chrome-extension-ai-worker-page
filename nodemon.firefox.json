{
  "env": {
    "__DEV__": "true"
  },
  "watch": [
    "src",
    "utils",
    "vite.config.base.ts",
    "vite.config.firefox.ts",
    "manifest.json",
    "manifest.dev.json"
  ],
  "ext": "jsx,tsx,css,html,js,ts,json",
  "ignore": ["src/**/*.spec.ts"],
  "exec": "vite build --config vite.config.firefox.ts --mode development"
}
